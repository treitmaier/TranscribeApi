addTask:
INSERT INTO task(user_id, path, length, provenance, display_name) VALUES (?,?,?,?,?);

allUserTasks:
SELECT * FROM task WHERE user_id = ? ORDER BY updated_at DESC;

selectTaskById:
SELECT * FROM task WHERE id = ? LIMIT 1;

selectTaskByIdAndUserId:
SELECT * FROM task WHERE user_id = ? AND id = ? LIMIT 1;

